{{#if memberDetails}}
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <span class="card-title"><i class="material-icons">person</i>Member Details</span>
          <div class="input-field">
            <i class="material-icons prefix">person</i>
            <input type="text" value="{{memberDetails.firstName}}" disabled>
            <label for="firstName">First Name</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">person</i>
            <input type="text" value="{{memberDetails.lastName}}" disabled>
            <label for="lastName">Last Name</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">wc</i>
            <input type="text" value="{{memberDetails.gender}}" disabled>
            <label for="gender">Gender</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">school</i>
            <input type="text" value="{{memberDetails.institution}}" disabled>
            <label for="institution">Institution</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">local_library</i>
            <input type="text" value="{{memberDetails.programme}}" disabled>
            <label for="programme">Programme</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">flag</i>
            <input type="text" value="{{memberDetails.nationality}}" disabled>
            <label for="nationality">Nationality</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">location_city</i>
            <input type="text" value="{{memberDetails.city}}" disabled>
            <label for="city">City</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">date_range</i>
            <input type="date" value="{{memberDetails.dob}}" disabled>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">email</i>
            <input type="email" value="{{memberDetails.email}}" disabled>
            <label for="email">Email Address</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">phone</i>
            <input type="number" value="{{memberDetails.mobileNumber}}" disabled>
            <label for="mobileNumber">Mobile Number</label>
          </div>
        </div>
        <div class="card-action">
          <a href="/subadmin/welcome" class="btn blue darken-3 waves-effect">Back</a>
        </div>
      </div>
    </div>
  </div>
{{/if}}