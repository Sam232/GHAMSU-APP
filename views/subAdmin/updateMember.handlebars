{{#if memberDetails}}
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <span class="card-title"><i class="material-icons">person</i>Member Details</span>
          <form action="/subadmin/update/member/{{memberDetails._id}}?_method=PUT" method="POST">
            <div class="input-field">
              <i class="material-icons prefix">person</i>
              <input type="text" id="mFirstName" name="firstName" value="{{memberDetails.firstName}}" required>
              <label id="mFirstName1" for="firstName">First Name</label>
            </div>
            <div class="input-field"> 
              <i class="material-icons prefix">person</i>
              <input type="text" id="mLastName" name="lastName" value="{{memberDetails.lastName}}" required>
              <label id="mLastName1" for="lastName">Last Name</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">wc</i>
              <input type="text" id="mGender" name="gender" value="{{memberDetails.gender}}" required>
              <label id="mGender1" for="gender">Gender</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">local_library</i>
              <input type="text" id="mProgramme" name="programme" value="{{memberDetails.programme}}" required>
              <label id="mProgramme1" for="programme">Programme</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">flag</i>
              <input type="text" id="mNationality" name="nationality" value="{{memberDetails.nationality}}" required>
              <label id="mNationality1" for="nationality">Nationality</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">location_city</i>
              <input type="text" id="mCity" name="city" value="{{memberDetails.city}}" required>
              <label id="mCity1" for="city">City</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">date_range</i>
              <input type="date" id="mDOB" name="dob" value="{{memberDetails.dob}}" required>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">email</i>
              <input type="email" id="mEmail" name="email" value="{{memberDetails.email}}" required>
              <label id="mEmail1" for="email">Email Address</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">phone</i>
              <input type="number" id="mNumber" name="mobileNumber" value="{{memberDetails.mobileNumber}}" required>
              <label id="mNumber1" for="mobileNumber">Mobile Number</label>
            </div>
        </div>
        <div class="card-action">
          <button type="submit" class="btn blue darken-3 waves-effect">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
{{/if}}