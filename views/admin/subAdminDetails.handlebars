{{#if subAdminDetails}}
  <div class="row">
    <div class="col s12 hide-on-small-only">
      <div class="card">        
        <span class="card-title"><i class="material-icons">person</i>SubAdmin Details</span>
        <div class="card horizontal">
          <div class="card-image">
            <img src="{{imagePath}}" alt="subAdminImage">            
          </div>
          <div class="card-content">
            <div class="input-field">
              <i class="material-icons prefix">person</i>
              <input type="text" value="{{subAdminDetails.username}}" disabled>
              <label for="firstName">First Name</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">school</i>
              <input type="text" value="{{subAdminDetails.institution}}" disabled>
              <label for="lastName">Last Name</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">group</i>
              <input type="text" value="{{subAdminDetails.members}}" disabled>
              <label for="gender">Gender</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">phone</i>
              <input type="text" value="{{subAdminDetails.mobileNumber}}" disabled>
              <label for="institution">Institution</label>
            </div>
          <div class="card-action">
            <a href="/admin/manage/sub_admins" class="btn blue darken-3 waves-effect">Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 hide-on-med-and-up">
      <div class="card">        
        <div class="card-image">
          <img src="{{imagePath}}" alt="subAdminImage" class="responsive-img circle" >
          <span class="card-title"><i class="material-icons">person</i>SubAdmin Details</span>
        </div>
        <div class="card-content">
          <div class="input-field">
              <i class="material-icons prefix">person</i>
              <input type="text" value="{{subAdminDetails.username}}" disabled>
              <label for="firstName">First Name</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">school</i>
              <input type="text" value="{{subAdminDetails.institution}}" disabled>
              <label for="lastName">Last Name</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">group</i>
              <input type="text" value="{{subAdminDetails.members}}" disabled>
              <label for="gender">Gender</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">phone</i>
              <input type="text" value="{{subAdminDetails.mobileNumber}}" disabled>
              <label for="institution">Institution</label>
            </div>
        </div>
        <div class="card-action">
          <a href="/admin/manage/sub_admins" class="btn blue darken-3 waves-effect">Back</a>
        </div>
      </div>
    </div>
  </div>
{{/if}}