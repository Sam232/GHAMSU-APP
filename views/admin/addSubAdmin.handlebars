<div class="row">
  <div class="col s12">
    <div class="card">      
      <div class="card-content">
        <span class="card-title"><i class="material-icons">person_add</i> Add Sub Admin</span>
        <form action="/admin/add_sub_admin" method="POST">
          <div class="input-field">
            <i class="material-icons prefix">person</i>
            <label for="username" id="addLabel1">Username</label>
            <input type="text" name="username" class="validate" id="addForm1" required>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">school</i>
            <label for="institution" id="addLabel2">Institution</label>
            <input type="text" name="institution" class="validate" id="addForm2" required>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">phone</i>
            <label for="phoneNumber" id="addLabel3">Mobile Number</label>
            <input type="number" name="phoneNumber" class="validate" id="addForm3" required>
          </div>
          <div class="card-action">
              <button type="submit" class="btn blue darken-3 waves-effect">Submit</button>
            </form>
          </div>
      </div>
    </div>
  </div>
</div>