<div class="container login">
  <div class="row">
    <div class="col s12 hide-on-med-and-down">
      <div class="card">
        <div class="card-image logo">
          <img src="/img/ghamsu.jpg" class="" alt="">
        </div>
        <div class="card-content">
          <form action="/admin/login" method="POST">
            <div class="input-field">              
              <i class="material-icons prefix">account_circle</i> 
              <input type="text" name="username" id="usernameForm" class="validate" >
              <label id="usernameLabel" for="username">Username</label>             
            </div>
            <div class="input-field">
              <i class="material-icons prefix">lock_outline</i>
              <input type="password" name="password" id="passwordForm" class="validate" >              
              <label id="passwordLabel" for="password">Password</label>              
            </div> 
        </div>
        <div class="card-action">
            <button type="submit" class="btn center blue darken-3 waves-effect">Login</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col s12 hide-on-large-only">
      <div class="card">
        <div class="card-image logo">
          <img src="/img/ghamsu.jpg" class="" alt="">
        </div>
        <div class="card-content">
          <form action="/admin/login" method="POST">
