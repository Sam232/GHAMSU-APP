<div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <span class="card-title"><i class="material-icons">person</i>Sub Admins</span>
          <table class="striped" id="subAdminsTable">
            <thead>
              <tr>
                <th>Username</th>
                <th>Representing</th>
                <th>Members Added</th>
                <th>Mobile Number</th>
                <th>Update Details</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              {{#each subAdmins}}
                <tr>
                  <td>{{username}}</td>
                  <td>{{institution}}</td>
                  <td>{{members}}</td>
                  <td>{{mobileNumber}}</td>
                  <td><a href="/admin/update/sub_admin/{{_id}}" class="btn waves-effect green darken-3">Update</a></td>
                  <td>
                    <form action="/admin/delete/sub_admin?_method=DELETE" method="POST">
                      <input type="hidden" name="subAdminId" value="{{_id}}">
                      <button type="submit" class="btn waves-effect red darken-3">Delete</button>
                    </form>
                  </td>
                </tr>
                {{else}}
                <span class="center">
                  <h5>No SubAdmin(s) Added.</h5>
                  Use This Link To Add New SubAdmin 
                  <a href="/admin/add_sub_admins">Add</a>
                </span>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>